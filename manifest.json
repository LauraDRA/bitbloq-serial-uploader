{
    "name": "Serial Arduino Upload",
    "description": "Serial Arduino Upload description",
    "author": "bitbloq developer team - bq",
    "version": "0.5",
    "manifest_version": 2,
    "minimum_chrome_version": "23",
    "permissions": ["serial"],
    "app": {
        "background": {
            "scripts": ["launch.js"],
            "persistent": false
        }
    },
    "icons": {
        "16": "icon_16.png",
        "128": "icon_128.png"
    },
    "externally_connectable": {
        "matches": ["http://localhost:9000/*"]
    },
    "url_handlers": {
        "launcher": {
            "matches": [
                "https://localhost:9000/*"
            ],
            "title": "Launcher Serial Uploader"
        }
    }

}